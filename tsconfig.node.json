{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2019",  // Or whichever ECMAScript version suits your Node.js version
    "outDir": "./dist",  // Output directory for compiled JS files
    "rootDir": "./server",  // Root directory for your TypeScript files
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./server/**/*"]  // Include all files in the server directory
}
